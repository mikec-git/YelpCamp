<!-- Header Partial -->
<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        
        <div style="width: 30%; margin: 2rem auto;">
            
            <!-- Form to add a new campground -->
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campName" placeholder="name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campPrice" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campImage" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control rounded-1" rows="5" name="campDescription" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="location" placeholder="Yellowstone National Park">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds">Back to campgrounds</a>
            
        </div>
        
    </div>
    
<!-- Footer Partial -->
<% include ../partials/footer %>