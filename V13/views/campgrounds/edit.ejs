<!-- Header Partial -->
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 2rem auto;">
            <!-- Form to add a new campground -->
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control rounded-1" rows="5" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campgrounds</a>
        </div>
        
    </div>
</div>

<!-- Footer Partial -->
<% include ../partials/footer %>