<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 2rem auto;">
            <!-- Form to add a new campground -->
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds">Back to campgrounds</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>